<%= simple_form_for(@path,  html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :content %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
